<!-- 分类导航 -->
<scroll-view scroll-x class="nav-tabs">
  <view 
    class="tab {{currentTab == 0 ? 'active' : ''}}" 
    bindtap="switchTab" data-index="0"
  >近期更新</view>
  <view 
    class="tab {{currentTab == 1 ? 'active' : ''}}" 
    bindtap="switchTab" data-index="1"
  >实用软件</view>
  <view 
    class="tab {{currentTab == 2 ? 'active' : ''}}" 
    bindtap="switchTab" data-index="2"
  >影视音乐</view>
  <view 
    class="tab {{currentTab == 3 ? 'active' : ''}}" 
    bindtap="switchTab" data-index="3"
  >万能资料</view>
</scroll-view>

<!-- 工具列表 -->
<view class="tools-section">
  <view class="section-title">
    <text class="section-heading">热门工具</text>
  </view>
  
  <!-- 工具卡片 -->
  <block wx:for="{{tools}}" wx:key="index">
    <view class="tool-card">
      <view class="tool-icon {{item.iconClass}}">
        <image src="{{item.iconPath}}" mode="aspectFit"></image>
      </view>
      <view class="tool-content">
        <view class="tool-header">
          <text class="tool-title">{{item.title}}</text>
          <text class="tool-size">{{item.size}}</text>
        </view>
        <text class="tool-desc">{{item.desc}}</text>
        <view class="tool-footer">
          <text class="tool-version">{{item.version}}</text>
          <button class="btn-view" bindtap="viewDetail" data-id="{{item.id}}">查看</button>
        </view>
      </view>
    </view>
  </block>
</view>