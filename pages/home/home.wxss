/* 头部样式 */
.header {
  background: linear-gradient(135deg, #4a6bff, #8c52ff);
  color: white;
  padding: 20rpx 30rpx 40rpx;
  border-radius: 0 0 40rpx 40rpx;
}

.search-box {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 60rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  position: relative;
}

.search-box input {
  background: transparent;
  border: none;
  color: white;
  flex: 1;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}

.placeholder {
  color: rgba(255, 255, 255, 0.7);
}

.search-clear {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

/* 搜索结果区域 */
.search-results {
  background: white;
  min-height: 100vh;
  position: relative;
  z-index: 999;
}

.search-header {
  background: #f8f9fa;
  padding: 30rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.search-tip {
  font-size: 28rpx;
  color: #666;
}

.search-close {
  background: #4a6bff;
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.search-list {
  padding: 20rpx 0;
}

.search-item {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: white;
}

.search-item:active {
  background-color: #f8f9fa;
}

.search-item-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 24rpx;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f7fa;
}

.search-item-icon image {
  width: 60rpx;
  height: 60rpx;
}

.search-item-content {
  flex: 1;
  min-width: 0;
}

.search-item-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.search-item-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.search-item-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.search-item-size {
  font-size: 22rpx;
  color: #999;
  background: #f5f7fa;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.search-item-category {
  font-size: 22rpx;
  color: #4a6bff;
  background: rgba(74, 107, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.search-item-arrow {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ccc;
  font-size: 32rpx;
  margin-left: 20rpx;
}

.search-empty {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #999;
  font-size: 28rpx;
}

.ad-banner {
  background: white;
  border-radius: 30rpx;
  padding: 30rpx;
  margin: 30rpx 0;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.ad-icon {
  background: linear-gradient(135deg, #ff9d6c, #ff6b8b);
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}

.ad-icon image {
  width: 60rpx;
  height: 60rpx;
}

.ad-content {
  flex: 1;
}

.ad-title {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.ad-desc {
  color: #666;
  font-size: 24rpx;
  display: block;
  margin-bottom: 5rpx;
}

.ad-tag {
  background: #e6f7ff;
  color: #1890ff;
  border-radius: 8rpx;
  padding: 4rpx 16rpx;
  font-size: 24rpx;
  display: inline-block;
  margin-top: 10rpx;
}

/* 导航分类 */
.nav-tabs {
  white-space: nowrap;
  background: white;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.tab {
  display: inline-block;
  text-align: center;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #4a6bff;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: #4a6bff;
  border-radius: 4rpx;
}

/* Tab加载中的样式 */
.tabs-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  width: 100%;
  padding: 0 40rpx;
}

.loading-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #4a6bff;
  margin: 0 10rpx;
  animation: loading-bounce 1.4s infinite ease-in-out both;
}

.loading-dot:nth-child(1) {
  animation-delay: -0.32s;
}

.loading-dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes loading-bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

/* 工具列表 */
.tools-section {
  padding: 40rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-heading {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.more {
  color: #4a6bff;
  font-size: 26rpx;
}

.tool-card {
  background: white;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
  display: flex;
  min-height: 180rpx;
  transition: all 0.3s ease;
}

/* 高亮工具卡片样式 */
.tool-card.highlighted {
  background: linear-gradient(135deg, #f8f9ff, #fff);
  box-shadow: 0 12rpx 40rpx rgba(74, 107, 255, 0.2);
  border: 3rpx solid #4a6bff;
  transform: scale(1.02);
  animation: highlight-pulse 2s ease-in-out;
}

@keyframes highlight-pulse {
  0% {
    box-shadow: 0 12rpx 40rpx rgba(74, 107, 255, 0.2);
  }
  50% {
    box-shadow: 0 16rpx 50rpx rgba(74, 107, 255, 0.4);
  }
  100% {
    box-shadow: 0 12rpx 40rpx rgba(74, 107, 255, 0.2);
  }
}

.tool-icon {
  width: 140rpx;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tool-icon image {
  width: 100rpx;
  height: 100rpx;
}

.tool-content {
  flex: 1;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.tool-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.tool-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.tool-size {
  font-size: 24rpx;
  color: #999;
  background: #f5f7fa;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.tool-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

.tool-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

/* 版本容器 - 固定宽度 */
.version-container {
  width: 160rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

/* 版本标签 - 自适应内容 */
.tool-version {
  font-size: 24rpx;
  color: #4a6bff;
  background: rgba(74, 107, 255, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.btn-view {
  background: #4a6bff;
  color: white;
  border: none;
  padding: 0;
  border-radius: 30rpx;
  font-size: 26rpx;
  margin: 0;
  line-height: normal;
  width: 140rpx !important;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  width: 320rpx !important;
}

/* 微博信息 */
.weibo-info {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
}

/* 工具颜色 */
.camera { background: linear-gradient(135deg, #ff6b8b, #ff9d6c); }
.wechat { background: linear-gradient(135deg, #2ecc71, #1abc9c); }
.music { background: linear-gradient(135deg, #3498db, #9b59b6); }
.poem { background: linear-gradient(135deg, #f39c12, #e74c3c); }

/* 加载更多提示样式 */
.load-more-container {
  padding: 40rpx 0;
  text-align: center;
}

.loading-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 28rpx;
}

.loading-icon {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid #f3f3f3;
  border-top: 3rpx solid #4a6bff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.no-more-tip {
  color: #999;
  font-size: 26rpx;
  padding: 20rpx 0;
}

.empty-tip {
  color: #999;
  font-size: 28rpx;
  padding: 60rpx 0;
}